<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Material 2 - Light) -->
    <style name="Theme.GpxAnalyzer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- M2 Primary brand color -->
        <item name="colorPrimary">@color/veryDarkGray</item>
        <item name="colorPrimaryVariant">@color/veryDarkGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- M2 Secondary brand color -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/veryDarkGray</item>
        <!-- M2 Background color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- M2 Surface color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- M2 Error color -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom Style for Circular Mini FAB (M2 Base) -->
    <style name="Widget.App.FloatingActionButton.Mini.Circular" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- Shape -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <!-- M2 Colors -->
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="tint">?attr/colorOnBackground</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <!-- Size attributes -->
        <item name="fabSize">mini</item>
        <item name="iconSize">@dimen/fab_custom_icon_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Elevation -->
        <item name="android:elevation">6dp</item>

        <item name="circularProgressIndicatorStyle">@style/Widget.App.LoadingDataFromFileCircularProgressIndicator</item>

    </style>

    <style name="Widget.App.LoadingDataFromFileCircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">10dp</item>
        <item name="trackCornerRadius">10dp</item>
        <item name="indicatorSize">50dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- ShapeAppearance for Oval Button -->
    <style name="ShapeAppearance.App.Button.Oval" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom Style for Outlined MaterialButton -->
    <style name="Widget.App.MaterialButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button.Oval</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="layout_constraintWidth_percent">0.9</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="FullScreenDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <!--<item name="android:windowBackground">?attr/colorPrimary</item>-->

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>