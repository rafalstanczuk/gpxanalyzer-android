<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/overlay_view_to_reload_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/veryDarkGray"
            android:clickable="true"
            android:contentDescription="@string/overlay_view_to_reload_imageview"
            android:focusable="true"
            android:foregroundGravity="top"
            android:src="@drawable/ic_sync_load_fill1"
            app:tint="@color/white"
            tools:srcCompat="@drawable/ic_sync_load_fill1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>