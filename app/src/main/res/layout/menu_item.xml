<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="menuItem"
            type="com.itservices.gpxanalyzer.ui.main.item.MenuItem" />

        <variable
            name="handler"
            type="com.itservices.gpxanalyzer.ui.main.item.MenuItemHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnMenuItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{menuItem.title}"
            android:textAlignment="textStart"
            android:drawableStart="@{menuItem.icon}"
            android:drawableTint="@color/white"
            app:layout_constraintWidth_percent="0.6"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:onClick="@{() -> handler.onMenuItemClicked(menuItem)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>