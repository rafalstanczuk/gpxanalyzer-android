<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white128"
        app:cardCornerRadius="@dimen/margin_very_small"
        app:cardElevation="@dimen/margin_very_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/markerTextViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_very_small"
                android:layout_marginTop="@dimen/margin_very_small"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/margin_very_small"

                android:text="Time"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="11sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/markerTextViewValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_very_small"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="@dimen/margin_very_small"
                android:paddingBottom="@dimen/margin_very_small"

                android:text="Value"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@id/markerTextViewTime"
                app:layout_constraintTop_toBottomOf="@+id/markerTextViewTime" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/trendStatisticsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_very_small"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/markerTextViewValue"
                app:layout_constraintTop_toBottomOf="@id/markerTextViewValue">

                <TextView
                    android:id="@+id/markerTextViewNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_very_small"

                    android:text="1."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/trendTypeImageView"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="trendTypeImageView"
                    android:src="@drawable/ic_trending_flat_fill0"
                    app:layout_constraintBottom_toBottomOf="@id/markerTextViewNumber"
                    app:layout_constraintStart_toEndOf="@id/markerTextViewNumber"
                    app:layout_constraintTop_toTopOf="@id/markerTextViewNumber" />

                <TextView
                    android:id="@+id/markerTextViewDeltaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/margin_very_small"
                    android:layout_marginTop="@dimen/margin_very_small"
                    android:layout_marginEnd="@dimen/margin_small"

                    android:paddingStart="@dimen/margin_very_small"
                    android:paddingEnd="@dimen/margin_very_small"

                    android:text="+/-ASL"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/markerTextViewNumber"
                    app:layout_constraintTop_toBottomOf="@id/markerTextViewNumber" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cumulativeProcessedDataTypesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_very_small"
                android:layout_marginBottom="@dimen/margin_very_small"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/trendStatisticsLayout"
                app:layout_constraintStart_toStartOf="@id/trendStatisticsLayout"
                app:layout_constraintTop_toBottomOf="@id/trendStatisticsLayout">


                <TextView
                    android:id="@+id/fromSegmentStartSumRealDeltaCumulativeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/margin_very_small"
                    android:paddingEnd="@dimen/margin_very_small"

                    android:text="0.0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/allSumRealDeltaCumulativeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/margin_very_small"
                    android:paddingEnd="@dimen/margin_very_small"

                    android:text="0.0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fromSegmentStartSumRealDeltaCumulativeValue" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</layout>