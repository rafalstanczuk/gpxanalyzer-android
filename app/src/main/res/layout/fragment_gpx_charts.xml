<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.itservices.gpxanalyzer.ui.gpxchart.GpxChartsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/loadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/percentageProgressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:text="@{ viewModel.percentageProcessingProgressLiveData.toString() }"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/loadButton"
            app:layout_constraintStart_toEndOf="@id/loadButton"
            app:layout_constraintTop_toTopOf="@id/loadButton" />

        <ProgressBar
            android:id="@+id/percentageProgressBarChart"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_very_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:max="100"
            android:progress="@{viewModel.percentageProcessingProgressLiveData}"
            android:progressDrawable="@drawable/loading_data_progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadButton" />

        <TextView
            android:id="@+id/requestStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.requestStatusLiveData.name()}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/percentageProgressBarChart"
            app:layout_constraintEnd_toEndOf="@id/percentageProgressBarChart"
            app:layout_constraintStart_toStartOf="@id/percentageProgressBarChart"
            app:layout_constraintTop_toTopOf="@id/percentageProgressBarChart" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/height_time_chart_Layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@{viewModel.dataEntityChartPercentageHeight}"
            app:layout_constraintTop_toBottomOf="@id/percentageProgressBarChart">

            <com.itservices.gpxanalyzer.chart.DataEntitiesLineChart
                android:id="@+id/height_time_lineChart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/height_zoom_in_zoom_out_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                app:layout_constraintEnd_toEndOf="@+id/height_time_lineChart"
                app:layout_constraintTop_toTopOf="@+id/height_time_lineChart">

                <Button
                    android:id="@+id/height_time_zoom_in_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/height_time_zoom_out_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="-"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/height_time_autoscaling_button"
                    app:layout_constraintStart_toEndOf="@id/height_time_zoom_in_button"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/height_time_autoscaling_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/reset"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/height_time_zoom_out_button"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/velocity_time_chart_Layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@{viewModel.dataEntityChartPercentageHeight}"
            app:layout_constraintTop_toBottomOf="@id/height_time_chart_Layout">


            <com.itservices.gpxanalyzer.chart.DataEntitiesLineChart
                android:id="@+id/velocity_time_lineChart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/velocity_zoom_in_zoom_out_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                app:layout_constraintEnd_toEndOf="@+id/velocity_time_lineChart"
                app:layout_constraintTop_toTopOf="@+id/velocity_time_lineChart">

                <Button
                    android:id="@+id/velocity_time_zoom_in_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/velocity_time_zoom_out_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="-"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/velocity_time_autoscaling_button"
                    app:layout_constraintStart_toEndOf="@id/velocity_time_zoom_in_button"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/velocity_time_autoscaling_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/reset"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/velocity_time_zoom_out_button"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
