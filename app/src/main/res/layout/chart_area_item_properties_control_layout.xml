<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chartAreaItem"
            type="com.itservices.gpxanalyzer.ui.gpxchart.item.ChartAreaItem" />

        <variable
            name="viewModel"
            type="com.itservices.gpxanalyzer.ui.gpxchart.ChartAreaListViewModel" />
    </data>

    <!--    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chart_value_info_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            card_view:cardBackgroundColor="@color/lightGray"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:contentPadding="0dp">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/switchModeButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_small"
            android:alpha="0.5"
            android:background="@color/white"
            android:contentDescription="@{ chartAreaItem.getViewMode().name}"
            android:enabled="@{viewModel.buttonsEnabledByRequestStatusLiveData}"
            android:onClick="@{() -> viewModel.onSwitchViewMode(chartAreaItem)}"
            android:src="@drawable/ic_altitude_fill0"
            app:imageResource="@{ chartAreaItem.getViewMode().getDrawableIconResId  }"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/drawAscDescSegCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_small"
            android:alpha="0.5"
            android:button="@drawable/ic_checkbox_ascdescseg_selector"
            android:checked="@{chartAreaItem.isDrawAscDescSegEnabled}"
            android:enabled="@{viewModel.buttonsEnabledByRequestStatusLiveData}"
            android:onCheckedChanged="@{(buttonView, isChecked) -> viewModel.onDrawAscDescSegCheckBoxChanged(chartAreaItem, isChecked)}"
            android:textColorHighlight="@color/white"
            app:layout_constraintStart_toEndOf="@+id/switchModeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <!--android:enabled="@{viewModel.buttonsEnabledByRequestStatusLiveData}"-->

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/onOffColorizedCirclesCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:button="@drawable/ic_checkbox_dots_selector"
            android:checked="@{chartAreaItem.drawIconsEnabled}"
            android:enabled="@{viewModel.buttonsEnabledByRequestStatusLiveData}"
            android:onCheckedChanged="@{(buttonView, isChecked) -> viewModel.onOnOffColorizedCirclesCheckBoxChanged(chartAreaItem, isChecked)}"
            android:textColorHighlight="@color/white"
            app:layout_constraintStart_toEndOf="@+id/drawAscDescSegCheckBox"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--</androidx.cardview.widget.CardView>-->

</layout>