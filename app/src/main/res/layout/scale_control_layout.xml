<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_small">

    <Button
        android:id="@+id/time_zoom_in_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="+"
        android:textSize="15sp"
        android:textStyle="bold"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/time_zoom_out_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_very_small"
        android:text="-"
        android:textSize="15sp"
        android:textStyle="bold"
        android:alpha="0.5"
        app:layout_constraintEnd_toStartOf="@+id/time_autoscaling_button"
        app:layout_constraintStart_toEndOf="@id/time_zoom_in_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/time_autoscaling_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_very_small"
        android:text="@string/reset"
        android:textSize="11sp"
        android:textStyle="bold"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_zoom_out_button"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>