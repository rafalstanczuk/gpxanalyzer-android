<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Material 2 - Night) -->
    <style name="Theme.GpxAnalyzer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- M2 Primary brand color -->
        <item name="colorPrimary">@color/veryDarkGray</item>
        <item name="colorPrimaryVariant">@color/veryDarkGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- M2 Secondary brand color -->
        <item name="colorSecondary">@color/grayNew</item>
        <item name="colorSecondaryVariant">@color/grayNew</item>
        <item name="colorOnSecondary">@color/veryDarkGray</item>
        <!-- M2 Background color -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- M2 Surface color -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- M2 Error color -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
</resources>